---

import Layout from '../layouts/Layout.astro';


---

<Layout title="Dublin Culture Hub">
  
    <section>
    <form>
        <div class="container">
          <div class="main-title">
            <h1>Contact us</h1>
              </div>
            <div class="form mb-3">
                <label for="exampleInputName" class="form-label">Full name</label>
                <input type="email" class="form-control" id="exampleInputName" aria-describedby="emailHelp">
                <div id="emailHelp" class="form-text"></div>
              </div>
            <div class="form mb-3">
                <label for="exampleInputEmail1" class="form-label">Email</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
               <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
              </div>
            <div class="form mb-3">
                <label for="exampleInputName" class="form-label">Message</label>
                <input type="email" class="form-control" id="exampleInputMessage" aria-describedby="emailHelp">
                <div id="emailHelp" class="form-text"></div>
              </div>
            <div class="form mb-3 form-check">
               <input type="checkbox" class="form-check-input" id="exampleCheck1">
              <label class="form-check-label" for="exampleCheck1">Check me out</label>
           </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </section>

 </Layout>

 <style>
    
.main-title {
    padding: 60px;
    font-size: 3rem;
    font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    font-weight: 100;
    color: white;
    text-align: center;
}

.form {
    padding-bottom: 45px;
    padding-left: 45px;
    padding-right: 45px;
    color: whitesmoke;
    font-size: 1.1rem;


}

.form-text {
    font-size: 0.9rem;
    color: rgb(194, 186, 186);
}

 </style>
 
 